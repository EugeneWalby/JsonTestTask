<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextHelvetica">
        <item name="android:fontFamily">Helvetica</item>
    </style>

    <style name="TextHelvetica.Black" parent="TextHelvetica">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextHelvetica.Black.24" parent="TextHelvetica.Black">
        <item name="android:textSize">@dimen/text_24</item>
    </style>
</resources>
